<?xml version="1.0" encoding="UTF-8" ?>
<XMLDB PATH="payment/gateway/robokassa/db" VERSION="20240427" COMMENT="XMLDB file for Moodle payment/gateway/robokassa"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:noNamespaceSchemaLocation="../../../../lib/xmldb/xmldb.xsd"
>
  <TABLES>
    <TABLE NAME="paygw_robokassa" COMMENT="List of successful Robokassa transactions.">
      <FIELDS>
        <FIELD NAME="id" TYPE="int" LENGTH="10" NOTNULL="true" SEQUENCE="true"/>
        <FIELD NAME="userid"       TYPE="int" LENGTH="10" UNSIGNED="true" NOTNULL="true" SEQUENCE="false" ENUM="false"/>
        <FIELD NAME="courseid"     TYPE="int" LENGTH="10" UNSIGNED="true" NOTNULL="false" SEQUENCE="false" ENUM="false"/>
        <FIELD NAME="group_names"   TYPE="text" NOTNULL="false" SEQUENCE="false" ENUM="false"/>
        <FIELD NAME="component" TYPE="char" LENGTH="255" NOTNULL="false" SEQUENCE="false"/>
        <FIELD NAME="paymentarea" TYPE="char" LENGTH="255" NOTNULL="false" SEQUENCE="false"/>
        <FIELD NAME="itemid" TYPE="int" LENGTH="10" NOTNULL="false" SEQUENCE="false"/>
        <FIELD NAME="cost"         TYPE="char" LENGTH="13" NOTNULL="true" SEQUENCE="false" ENUM="false" NEXT="currency"/>
        <FIELD NAME="currency"     TYPE="char" LENGTH="4" NOTNULL="true" SEQUENCE="false" ENUM="false" PREVIOUS="cost" NEXT="date_created"/>
        <FIELD NAME="date_created" TYPE="char" LENGTH="20" NOTNULL="true" SEQUENCE="false" ENUM="false" PREVIOUS="currency" NEXT="success"/>
        <FIELD NAME="success"    TYPE="int" LENGTH="2" UNSIGNED="true" NOTNULL="true" DEFAULT="0" SEQUENCE="false" ENUM="false" PREVIOUS="date_created"/>
      </FIELDS>
      <KEYS>
        <KEY NAME="primary" TYPE="primary" FIELDS="id"/>
      </KEYS>
    </TABLE>
  </TABLES>
</XMLDB>
